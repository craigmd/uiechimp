fetchAPIData(endpoint).then(response => {
  dispatch(getFolderCampaigns(response));
});

<Column
  cell={
    <Cell
      className="campaigns-cell"
    >
      <div className="action-box action-box--none"></div>
    </Cell>
  }
  width={42}
/>

const uniqueActivity = activities => {
  const actions = activities.map(activity => activity.action);
  return [...new Set(actions)];
};

const transformEmailActivity = emails => {
  return emails.map(email => {
    const { activity, ...rest } = email;
    return {...rest, activity: uniqueActivity(activity)}
  });
}

let byEmail = {};
const allCampaignEmails = emailActivity.allIds
  .map(id => emailActivity.byId[id])
  .reduce((prev, cur) => {
    return prev.concat(cur);
  }, []);
